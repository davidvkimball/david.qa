filters:
  and:
    - file.ext == "md"
formulas:
  Draft: file.name.startsWith("_")
properties:
  note.title:
    displayName: Title
  note.date:
    displayName: Date
views:
  - type: bases-cms
    name: All Posts
    sort:
      - property: date
        direction: DESC
    showDraftStatus: true
    draftStatusUseFilenamePrefix: true
    titleProperty: note.title
    showTextPreview: false
