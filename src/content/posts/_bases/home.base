filters:
  and:
    - file.ext == "md"
    - file.folder != "_templates"
formulas:
  Draft: file.name.startsWith("_")
properties:
  note.title:
    displayName: Title
  note.date:
    displayName: Date
views:
  - type: cards
    name: Posts
    order:
      - title
      - date
      - formula.Draft
    sort:
      - property: date
        direction: DESC
    cardSize: 260
    imageAspectRatio: 0.4
